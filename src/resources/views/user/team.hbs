          <div class="date"><strong>Deadline:</strong> {{this.deadline}}</div>
          <input class="save-form" type="submit" value="Edit" />
        </form>
                {{/if}}
                {{/each}}
      </div>
      
        <div class="list">
          <form class="list-item" method="POST"  id="form-add3" style="display: none;">
